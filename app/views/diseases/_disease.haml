%tr{:href => disease_url(disease)}
  %td= disease['name']
  %td
    - if disease['alt_names']
      = disease['alt_names'].gsub('"','').gsub(',',', ').chomp(', ')
  %td= disease['pharmGkbID']
  %td= disease['source']
  -if disease['pmids']
    %td
      = render 'common/pmids', locals: {ids: disease['pmids']}
    %td
      = render 'common/curated', locals: {status: disease['isCurated']}

