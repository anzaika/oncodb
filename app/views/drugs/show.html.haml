%p#notice= notice

%p
  %b Name:
  = @drug.name
%p
  %b Description:
  = @drug.description
%p
  %b Drugbankid:
  = @drug.drugbankID
%p
  %b Pharmgkbid:
  = @drug.pharmGkbID
%p
  %b Fdaapproved:
  = @drug.fdaApproved
%p
  %b Source:
  = @drug.source

- if !@drug.diseases.empty?
  %h3
    Diseases(
    = @drug.diseases.count
    )

  %table
    %tr
      %th name
      %th alt_names
      %th pharmGkbID
      %th source
      %th PMIDs
    = render @drug.diseases

- if !@drug.genes.empty?
  %h3
    Genes(
    = @drug.genes.count
    )

  %table
    %tr
      %th name
      %th description
      %th uniprotKB
      %th ensemblID
      %th entrezID
      %th pharmGkbID
    = render @drug.genes

