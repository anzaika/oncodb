%p#notice= notice

%p
  %b Name:
  = @gene.name
%p
  %b Source:
  = @gene.source
%p
  %b Description:
  = @gene.description
%p
  %b Uniprotkb:
  = @gene.uniprotKB
%p
  %b Ensemblid:
  = @gene.ensemblID
%p
  %b Entrezid:
  = @gene.entrezID
%p
  %b Pharmgkbid:
  = @gene.pharmGkbID
%p
  %b Drugbanktargetid:
  = @gene.drugbankTargetID

- if !@gene.drugs.empty?
  %h3
    Drugs(
    = @gene.drugs.count
    )

  %table
    %tr
      %th name
      %th description
      %th drugbankID
      %th pharmGkbID
      %th fdaApproved
      %th source
      %th PMIDs
    = render @gene.drugs

- if !@gene.diseases.empty?
  %h3
    Diseases(
    = @gene.diseases.count
    )

  %table
    %tr
      %th name
      %th alt_names
      %th pharmGkbID
      %th source
      %th PMIDs
    = render @gene.diseases

