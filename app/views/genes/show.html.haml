%p#notice= notice

%h1.center
  Gene

%table.table.table-bordered.table-responsive.table-striped.drug-desc
  %tr
    %td
      %b
        Name
    %td= @gene.name

  %tr
    %td
      %b
        Source
    %td= @gene.source

  %tr
    %td
      %b
        Description
    %td= @gene.description

  %tr
    %td
      %b
        Uniprotkb
    %td
      %a{href: "http://www.uniprot.org/uniprot/#{@gene.uniprotKB}"}
        = @gene.uniprotKB

  %tr
    %td
      %b
        Ensemblid
    %td
      %a{href: "http://www.ensembl.org/Homo_sapiens/Gene/Summary?db=core;g=#{@gene.ensemblID}"}
        = @gene.ensemblID

  %tr
    %td
      %b
        Entrezid
    %td
      %a{href: "http://www.ncbi.nlm.nih.gov/gene/?term=#{@gene.entrezID}"}
        = @gene.entrezID

  %tr
    %td
      %b
        Pharmgkbid
    %td
      %a{href: "http://www.pharmgkb.org/gene/#{@gene.pharmGkbID}"}
        = @gene.pharmGkbID

= render 'diseases/smart_list'
