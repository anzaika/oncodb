%p#notice= notice

%h1.center
  Gene

%table.table.table-bordered.table-responsive.table-striped.drug-desc
  %tr
    %td
      %b
        Name
    %td= @gene.name

  %tr
    %td
      %b
        Source
    %td= @gene.source

  %tr
    %td
      %b
        Description
    %td= @gene.description

  %tr
    %td
      %b
        Uniprotkb
    %td= attr_link(:uniprot, @gene)

  %tr
    %td
      %b
        Ensemblid
    %td= attr_link(:ensembl, @gene)

  %tr
    %td
      %b
        Entrezid
    %td= attr_link(:entrez, @gene)

  %tr
    %td
      %b
        Pharmgkbid
    %td= attr_link(:pharmgkb, @gene)

= render 'diseases/smart_list_with_search'
